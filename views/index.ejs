  <main>
    <div class="login-page">
      <div class="form">
        <!-- Registration form -->
        <form class="register-form" method="post" action="/register">
          <input type="text" name="first_name" placeholder="First Name" />
          <input type="text" name="last_name" placeholder="Last Name" />
          <input type="password" name="password" placeholder="Password" />
          <input type="text" name="email" placeholder="Email Address" />
          <div class="mb-3">
            <button type="submit">Register</button>
          </div>
          <p class="message">
            Already registered? <a href="/login">Sign In</a>
          </p>
        </form>

        <!-- Login form -->
        <form method="post" class="login-form" action="/login">
          <div class="mb-3">
            <input type="email" placeholder="Email" name="user_email_address" class="form-control" />
          </div>
          <div class="mb-3">
            <input placeholder="Password" type="password" name="user_password" class="form-control" />
          </div>
          <div class="mb-3">
            <button type="submit">Login</button>
          </div>
          <p class="message">
            Not registered? <a href="#">Create an account</a>
          </p>
        </form>
      </div>
    </div>
